---
import Base from './Base.astro';

const { title } = Astro.props;
---

<Base title={title} description={title}>
	<p></p>
	<h2>–</h2>
	<h1 class="about-title">{title}</h1>
	<div class='post-content content about-page'>
		<slot />
	</div>

	<style>
		.about-title {
			font-size: 1.17em;
			font-weight: bold;
			margin-top: 0.2rem;
			margin-bottom: 0.5rem;
		}

		.about-page :global(h3) {
			margin-top: 1.8rem;
			margin-bottom: 0.6rem;
		}

		/* 爱好标签 */
		.about-page :global(.hobby-list) {
			display: flex;
			flex-wrap: wrap;
			gap: 0.4rem;
			margin: 1rem 0;
		}

		.about-page :global(.hobby) {
			display: inline-block;
			padding: 0.3rem 0.65rem;
			font-size: 0.85rem;
			border-radius: 3px;
			background: transparent;
			border: 1px solid rgba(0, 0, 0, 0.12);
			color: var(--text-color);
			transition: border-color 0.15s;
		}

		.about-page :global(.hobby:hover) {
			border-color: rgba(0, 0, 0, 0.3);
		}

		.about-page :global(.hobby.inactive) {
			text-decoration: line-through;
			opacity: 0.4;
		}

		:global([data-theme='dark']) .about-page :global(.hobby) {
			border-color: rgba(255, 255, 255, 0.15);
		}

		:global([data-theme='dark']) .about-page :global(.hobby:hover) {
			border-color: rgba(255, 255, 255, 0.35);
		}

		/* 更多导航 */
		.about-page :global(.more-nav) {
			display: flex;
			flex-wrap: wrap;
			align-items: center;
			gap: 0.15rem;
			margin: 0.5rem 0;
		}

		.about-page :global(.more-nav a) {
			font-size: 0.95rem;
			color: var(--text-color) !important;
			text-decoration: underline !important;
			text-underline-offset: 3px;
			text-decoration-color: rgba(0, 0, 0, 0.2) !important;
			border-bottom: none !important;
			transition: text-decoration-color 0.15s;
		}

		.about-page :global(.more-nav a:hover) {
			text-decoration-color: var(--text-color) !important;
			border-bottom: none !important;
		}

		.about-page :global(.more-nav .sep) {
			color: var(--gray-color);
			font-size: 0.85rem;
			padding: 0 0.35rem;
			user-select: none;
		}

		:global([data-theme='dark']) .about-page :global(.more-nav a) {
			text-decoration-color: rgba(255, 255, 255, 0.25) !important;
		}

		:global([data-theme='dark']) .about-page :global(.more-nav a:hover) {
			text-decoration-color: var(--text-color) !important;
		}

		/* 联系方式列表 */
		.about-page :global(.contact-list) {
			display: flex;
			flex-direction: column;
			gap: 0.5rem;
			margin: 0.5rem 0;
		}

		.about-page :global(.contact-item) {
			display: flex;
			align-items: baseline;
		}

		.about-page :global(.contact-label) {
			width: 70px;
			flex-shrink: 0;
			font-size: 0.85rem;
			color: var(--gray-color);
		}

		.about-page :global(.contact-item a) {
			font-size: 0.95rem;
			color: var(--text-color);
			text-decoration: none;
			border-bottom: 1px dashed transparent;
			transition: border-color 0.2s;
		}

		.about-page :global(.contact-item a:hover) {
			border-bottom-color: var(--gray-color);
		}

		/* 历史折叠 */
		.about-page :global(.history-fold) {
			margin: 0.8rem 0;
			background: transparent;
			border: 1px solid rgba(0, 0, 0, 0.08);
			border-radius: 6px;
			overflow: hidden;
		}

		:global([data-theme='dark']) .about-page :global(.history-fold) {
			border-color: rgba(255, 255, 255, 0.1);
		}

		.about-page :global(.history-fold summary) {
			padding: 0.75rem 1rem;
			cursor: pointer;
			font-size: 0.95rem;
			list-style: none;
			transition: background 0.2s;
		}

		.about-page :global(.history-fold summary:hover) {
			background: rgba(0, 0, 0, 0.02);
		}

		:global([data-theme='dark']) .about-page :global(.history-fold summary:hover) {
			background: rgba(255, 255, 255, 0.03);
		}

		.about-page :global(.history-fold summary::-webkit-details-marker) {
			display: none;
		}

		.about-page :global(.history-fold summary::before) {
			content: '▸ ';
			font-size: 0.8em;
			color: var(--gray-color);
		}

		.about-page :global(.history-fold[open] summary::before) {
			content: '▾ ';
		}

		.about-page :global(.history-fold[open] summary) {
			border-bottom: 1px solid rgba(0, 0, 0, 0.05);
		}

		:global([data-theme='dark']) .about-page :global(.history-fold[open] summary) {
			border-bottom-color: rgba(255, 255, 255, 0.08);
		}

		.about-page :global(.history-fold > p) {
			padding: 0 1rem;
			margin: 0.7rem 0;
			font-size: 0.9rem;
			line-height: 1.75;
			color: var(--text-color);
		}

		.about-page :global(.history-tags) {
			display: flex;
			flex-wrap: wrap;
			gap: 0.4rem;
			padding: 0 1rem 0.9rem;
		}

		.about-page :global(.history-tags span) {
			display: inline-block;
			padding: 0.25rem 0.6rem;
			background: rgba(0, 0, 0, 0.04);
			border-radius: 4px;
			font-size: 0.8rem;
			color: var(--gray-color);
		}

		:global([data-theme='dark']) .about-page :global(.history-tags span) {
			background: rgba(255, 255, 255, 0.06);
		}
	</style>
</Base>
