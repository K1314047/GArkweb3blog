---
import type { CollectionEntry } from 'astro:content';
import Base from './Base.astro';
import projectsData from '../content/page/projects.json';

type Props = CollectionEntry<'page'>['data'] & {
	content?: string;
};

const { title } = Astro.props;

// 定义项目类型
interface Project {
	name: string;
	description: string;
	url: string;
	image?: string;
	tags?: string[];
}

// 读取项目数据
const projects: Project[] = projectsData;
---

<Base title={title} description={title}>
	<p></p>
	<h2>–</h2>
	<h1>{title}</h1>
	<div class='post-content content'>
		<slot />
	</div>

	<div class='projects-container'>
		<!-- 项目列表 -->
		<div class='projects-list'>
			{
				projects.length === 0 ? (
					<div class='empty-state'>暂无项目数据</div>
				) : (
					projects.map((project) => (
						<a href={project.url || '#'} class='project-item' target='_blank' rel='noopener noreferrer'>
							<div class='project-header'>
								<h3 class='project-name'>{project.name || '未命名项目'}</h3>
								<svg class='project-arrow' width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
									<path d="M7 17L17 7M17 7H7M17 7V17"/>
								</svg>
							</div>
							<p class='project-desc'>{project.description}</p>
							{project.tags && project.tags.length > 0 && (
								<div class='project-tags'>
									{project.tags.map((tag) => (
										<span class='tag'>{tag}</span>
									))}
								</div>
							)}
						</a>
					))
				)
			}
		</div>

		<h2 class='section-title'>GitHub Activity</h2>

		<!-- GitHub 活动 -->
		<section class='github-activity'>
			<div class='github-activity__chart'>
				<img
					src='https://ghchart.rshah.org/659eb9/lynkxu'
					alt='GitHub activity chart'
					loading='lazy'
				/>
			</div>
		</section>
	</div>
</Base>

<style>
	.projects-list {
		display: flex;
		flex-direction: column;
		gap: 0.75rem;
	}

	.project-item {
		display: block;
		padding: 1rem 1.25rem;
		border: 1px solid rgba(0, 0, 0, 0.08);
		border-radius: 6px;
		text-decoration: none;
		transition: border-color 0.2s, background-color 0.2s;
	}

	.project-item:hover {
		border-color: rgba(0, 0, 0, 0.2);
		background-color: rgba(0, 0, 0, 0.01);
	}

	:global([data-theme='dark']) .project-item {
		border-color: rgba(255, 255, 255, 0.1);
	}

	:global([data-theme='dark']) .project-item:hover {
		border-color: rgba(255, 255, 255, 0.25);
		background-color: rgba(255, 255, 255, 0.02);
	}

	.project-header {
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 0.5rem;
	}

	.project-name {
		margin: 0;
		font-size: 1.05rem;
		font-weight: 600;
		color: var(--heading-color);
	}

	.project-arrow {
		flex-shrink: 0;
		color: var(--gray-color);
		opacity: 0;
		transform: translateX(-4px);
		transition: opacity 0.2s, transform 0.2s;
	}

	.project-item:hover .project-arrow {
		opacity: 1;
		transform: translateX(0);
	}

	.project-desc {
		margin: 0.4rem 0 0;
		font-size: 0.9rem;
		color: var(--gray-color);
		line-height: 1.5;
	}

	.project-tags {
		display: flex;
		flex-wrap: wrap;
		gap: 0.4rem;
		margin-top: 0.6rem;
	}

	.project-tags .tag {
		padding: 0.15rem 0.5rem;
		font-size: 0.75rem;
		border-radius: 3px;
		background: rgba(0, 0, 0, 0.04);
		color: var(--gray-color);
		border: none;
	}

	:global([data-theme='dark']) .project-tags .tag {
		background: rgba(255, 255, 255, 0.06);
	}

	.empty-state {
		text-align: center;
		padding: 2rem;
		color: var(--gray-color);
		font-size: 0.95rem;
	}

	.section-title {
		margin: 2.5rem 0 1rem;
		font-size: 1.1rem;
		font-weight: 600;
		color: var(--heading-color);
	}

	.github-activity {
		background: var(--code-background-color);
		border-radius: 6px;
		padding: 0.75rem;
		border: 1px solid rgba(0, 0, 0, 0.05);
	}

	:global([data-theme='dark']) .github-activity {
		border-color: rgba(255, 255, 255, 0.08);
	}

	.github-activity__chart {
		border-radius: 4px;
		overflow: hidden;
	}

	.github-activity__chart img {
		width: 100%;
		display: block;
	}
</style>
