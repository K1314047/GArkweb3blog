---
import Base from './Base.astro';

const { title } = Astro.props;
---

<Base title={title} description="运动记录" fullWidth={true} hideHeader={true}>
  <div class="sports-layout">
    <div class="page-header">
        <a href="/about" class="back-link">
            ← 返回
        </a>
        <div class="header-title">
            <span class="title-text">{title}</span>
        </div>
    </div>
    
    <div class="content">
      <slot />
    </div>
  </div>

  <style>
    .sports-layout {
        width: 100%;
        max-width: 1200px;
        margin: 0 auto;
    }

    .page-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 3rem;
        padding-bottom: 0;
        border-bottom: none;
    }
    .back-link {
        font-size: 0.9rem;
        text-decoration: none;
        color: var(--gray-color);
        padding: 0.5rem 0;
        transition: color 0.2s;
    }
    .back-link:hover {
        color: var(--link-color);
    }
    .header-title {
        font-size: 1rem;
        font-weight: bold;
        color: var(--heading-color);
    }
    
    /* 内容区域样式调整，使其在无 Hero 模式下更紧凑 */
    .content {
      margin-top: 1rem;
    }
  </style>
</Base>

