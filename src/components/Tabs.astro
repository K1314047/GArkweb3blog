<astro-tabs class="tabs-container">
  <div class="tabs-header">
    {/* 这里会被 JS 填充 */}
  </div>
  <div class="tabs-content">
    <slot />
  </div>
</astro-tabs>

<script>
  class Tabs extends HTMLElement {
    constructor() {
      super();
      // 等待子元素渲染完成
      this.init();
    }

    init() {
      const header = this.querySelector('.tabs-header');
      const content = this.querySelector('.tabs-content');
      if (!header) return;
      // 如果还没渲染好，可能拿不到 content
      if (!content) return;

      const items = Array.from(content.querySelectorAll('.tab-item'));
      
      if (items.length === 0) return;

      // 清空 header 防止重复添加 (以防万一)
      header.innerHTML = '';

      // 生成 Tab 按钮
      items.forEach((item, index) => {
        const label = item.getAttribute('data-label');
        const count = item.getAttribute('data-count');
        const button = document.createElement('button');
        button.className = 'tab-btn' + (index === 0 ? ' active' : '');

        if (label) {
          const labelText = document.createElement('span');
          labelText.className = 'tab-label';
          labelText.textContent = label;
          button.appendChild(labelText);
        }

        if (count !== null) {
          const countText = document.createElement('span');
          countText.className = 'tab-count';
          countText.textContent = count;
          button.appendChild(countText);
        }

        button.addEventListener('click', () => this.switchTab(index));
        header.appendChild(button);

        // 初始化内容显示状态
        if (index === 0) {
          item.classList.add('active');
        } else {
          item.classList.remove('active');
        }
      });
    }

    switchTab(index: number) {
      const header = this.querySelector('.tabs-header');
      const content = this.querySelector('.tabs-content');
      if (!header || !content) return;
      const buttons = header.querySelectorAll('.tab-btn');
      const items = content.querySelectorAll('.tab-item');

      buttons.forEach((btn, i) => {
        if (i === index) btn.classList.add('active');
        else btn.classList.remove('active');
      });

      items.forEach((item, i) => {
        if (i === index) item.classList.add('active');
        else item.classList.remove('active');
      });
    }
  }

  // 只有当浏览器还没定义时才定义，防止热更新报错
  if (!customElements.get('astro-tabs')) {
    customElements.define('astro-tabs', Tabs);
  }
</script>

<style>
  astro-tabs {
    display: block;
    margin: 0.75rem 0;
  }

  .tabs-header {
    display: flex;
    border-bottom: 1px solid rgba(0,0,0,0.06);
    margin-bottom: 1.25rem;
    gap: 2rem;
  }

  :global(.tab-btn) {
    background: none;
    border: none;
    padding: 0.8rem 0;
    font-size: 1.1em;
    font-weight: 600;
    color: var(--gray-color);
    cursor: pointer;
    border-bottom: 2px solid transparent;
    transition: all 0.2s cubic-bezier(0.4, 0, 0.2, 1);
    margin-bottom: -1px;
    letter-spacing: 0.02em;
    display: inline-flex;
    align-items: baseline;
    gap: 0.35rem;
  }

  :global(.tab-btn.active) {
    color: var(--heading-color);
    border-bottom-color: var(--heading-color);
  }

  :global(.tab-btn:hover:not(.active)) {
    color: var(--text-color);
  }

  :global(.tab-count) {
    font-size: 0.75em;
    font-weight: 500;
    opacity: 0.55;
    letter-spacing: 0.01em;
  }

  /* Dark mode adjustment */
  :global([data-theme="dark"]) .tabs-header {
    border-bottom-color: rgba(255,255,255,0.08);
  }
</style>
