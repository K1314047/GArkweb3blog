---
const { label, count } = Astro.props;
---

<div class="tab-item" data-label={label} data-count={count}>
  <slot />
</div>

<style>
  .tab-item {
    display: none;
    animation: fadeIn 0.3s ease-in-out;
  }

  .tab-item.active {
    display: block;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(5px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>

