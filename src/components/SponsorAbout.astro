---
import { SPONSOR_GROUPS } from './sponsorConfig';
---

<div class="sponsor-about">
	<details class="sponsor-fold">
		<summary class="sponsor-fold__summary">
			<span class="sponsor-fold__title">微信 / 支付宝</span>
			<span class="sponsor-fold__chev" aria-hidden="true">▼</span>
		</summary>
		<div class="sponsor-fold__content">
			<div class="sponsor-about__grid sponsor-about__grid--2">
				{SPONSOR_GROUPS.find((g) => g.name === 'CNY')?.items.map((item) => (
					<div class="sponsor-card">
						<div class="sponsor-card__name">{item.name}</div>
						<div class="sponsor-card__qr">
							<img src={item.image} alt={`${item.name} 收款码`} loading="lazy" />
						</div>
					</div>
				))}
			</div>
		</div>
	</details>

	<details class="sponsor-fold">
		<summary class="sponsor-fold__summary">
			<span class="sponsor-fold__title">Crypto</span>
			<span class="sponsor-fold__chev" aria-hidden="true">▼</span>
		</summary>
		<div class="sponsor-fold__content">
			<div class="sponsor-about__grid sponsor-about__grid--3">
				{SPONSOR_GROUPS.find((g) => g.name === 'Crypto')?.items.map((item) => (
					<div class="sponsor-card sponsor-card--crypto">
						<div class="sponsor-card__name">{item.name}</div>
						<div class="sponsor-card__desc">{item.desc || ''}</div>
						<div class="sponsor-card__qr">
							<img src={item.image} alt={`${item.name} QR`} loading="lazy" />
						</div>
						{item.address && (
							<div class="sponsor-card__addr">
							<code class="addr-text">{item.address}</code>
							<button class="addr-copy" type="button" data-clipboard-text={item.address} aria-label="Copy address">
								<svg class="icon-copy" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
									<rect x="9" y="9" width="13" height="13" rx="2" ry="2"></rect>
									<path d="M5 15H4a2 2 0 0 1-2-2V4a2 2 0 0 1 2-2h9a2 2 0 0 1 2 2v1"></path>
								</svg>
							</button>
							</div>
						)}
					</div>
				))}
			</div>
		</div>
	</details>
</div>

<style>
	.sponsor-about {
		margin: 0.2rem 0 0.9rem;
	}

	.sponsor-fold + .sponsor-fold {
		margin-top: 0.8rem;
	}

	.sponsor-fold {
		border: 1px solid rgba(0, 0, 0, 0.05);
		border-radius: 12px;
		background: var(--code-background-color, #f2f2f2);
		overflow: hidden;
	}

	:global([data-theme='dark']) .sponsor-fold {
		background: rgba(255, 255, 255, 0.04);
		border-color: rgba(255, 255, 255, 0.1);
	}

	.sponsor-fold__summary {
		list-style: none;
		cursor: pointer;
		user-select: none;
		padding: 0.75rem 0.9rem;
		display: flex;
		align-items: center;
		justify-content: space-between;
		gap: 0.8rem;
	}

	/* Hide default marker */
	.sponsor-fold__summary::-webkit-details-marker {
		display: none;
	}

	.sponsor-fold__title {
		font-weight: 600;
		color: var(--heading-color);
		font-size: 0.95rem;
	}

	.sponsor-fold__chev {
		font-size: 0.75rem;
		opacity: 0.7;
		transition: transform 0.2s ease;
	}

	details[open] > .sponsor-fold__summary .sponsor-fold__chev {
		transform: rotate(180deg);
	}

	.sponsor-fold__content {
		padding: 0 0.9rem 0.9rem;
	}

	.sponsor-about__grid {
		display: grid;
		gap: 0.6rem;
		align-items: stretch;
	}

	.sponsor-about__grid--2 {
		grid-template-columns: repeat(2, minmax(0, 1fr));
	}

	.sponsor-about__grid--3 {
		grid-template-columns: repeat(3, minmax(0, 1fr));
	}

	@media (max-width: 720px) {
		.sponsor-about__grid--3 {
			grid-template-columns: repeat(2, minmax(0, 1fr));
		}
	}

	@media (max-width: 520px) {
		.sponsor-about__grid--2,
		.sponsor-about__grid--3 {
			grid-template-columns: 1fr;
		}
	}

	.sponsor-card {
		background: rgba(255, 255, 255, 0.6);
		border: 1px solid rgba(0, 0, 0, 0.05);
		border-radius: 12px;
		padding: 0.7rem;
		display: flex;
		flex-direction: column;
		height: 100%;
		box-sizing: border-box;
	}

	:global([data-theme='dark']) .sponsor-card {
		background: rgba(0, 0, 0, 0.12);
		border-color: rgba(255, 255, 255, 0.08);
	}

	.sponsor-card__name {
		font-weight: 600;
		color: var(--heading-color);
		margin-bottom: 0.25rem;
		font-size: 0.9rem;
	}

	.sponsor-card__desc {
		font-size: 0.8rem;
		color: var(--gray-color);
		margin-bottom: 0.45rem;
		line-height: 1.3;
		min-height: 2.6em; /* keep crypto cards aligned even when desc is empty */
	}

	.sponsor-card__qr {
		background: #fff;
		border-radius: 10px;
		padding: 0.35rem;
		display: flex;
		align-items: center;
		justify-content: center;
	}

	:global([data-theme='dark']) .sponsor-card__qr {
		background: rgba(255, 255, 255, 0.95);
	}

	.sponsor-card__qr img {
		width: 124px;
		height: 124px;
		object-fit: contain;
		margin: 0;
		display: block;
	}

	.sponsor-card__addr {
		margin-top: 0.55rem;
		display: grid;
		grid-template-columns: 1fr auto;
		align-items: start;
		gap: 0.5rem;
		/* push addr to bottom for equal-height cards */
		margin-top: auto;
		padding-top: 0.55rem;
	}

	.addr-text {
		display: inline-block;
		font-size: 0.78rem;
		padding: 0.3rem 0.45rem;
		border-radius: 8px;
		background: rgba(0, 0, 0, 0.05);
		white-space: normal;
		overflow-wrap: anywhere;
		word-break: break-word;
		min-width: 0;
		max-width: 100%;
	}

	:global([data-theme='dark']) .addr-text {
		background: rgba(255, 255, 255, 0.06);
	}

	.addr-copy {
		border: 1px solid rgba(0, 0, 0, 0.1);
		background: transparent;
		color: var(--text-color);
		border-radius: 8px;
		padding: 0.3rem;
		line-height: 0;
		cursor: pointer;
		display: inline-flex;
		align-items: center;
		justify-content: center;
	}

	:global([data-theme='dark']) .addr-copy {
		border-color: rgba(255, 255, 255, 0.15);
	}

	.addr-copy:hover {
		border-color: var(--primary-color);
		color: var(--primary-color);
	}

	.icon-copy {
		display: block;
	}
</style>

<script>
	function initSponsorAbout() {
		const root = document.querySelector('.sponsor-about');
		if (!root) return;

		const copyBtns = root.querySelectorAll('.addr-copy');
		copyBtns.forEach((btn) => {
			btn.addEventListener('click', async () => {
				const text = btn.getAttribute('data-clipboard-text');
				if (!text) return;
				try {
					await navigator.clipboard.writeText(text);
					const old = btn.innerHTML;
					btn.setAttribute('aria-label', 'Copied');
					btn.innerHTML = `<svg class="icon-copy" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true" style="color:#4caf50"><polyline points="20 6 9 17 4 12"></polyline></svg>`;
					setTimeout(() => {
						btn.innerHTML = old;
						btn.setAttribute('aria-label', 'Copy address');
					}, 1500);
				} catch (e) {
					// ignore
				}
			});
		});
	}

	document.addEventListener('DOMContentLoaded', initSponsorAbout);
	document.addEventListener('astro:page-load', initSponsorAbout);
</script>

