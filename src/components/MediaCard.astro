---
import { Image } from 'astro:assets';

interface Props {
  title: string;
  cover: string;
  rating?: number; // 个人评分 (1-10)
  neodbRating?: number; // NeoDB 评分
  brief?: string;
  comment?: string;
  date: string;
  link?: string;
  status?: string; // 'progress' or 'complete'
}

const { title, cover, rating, neodbRating, brief, comment, date, link, status } = Astro.props;

// Format date - this is the time when the item was first added to any shelf
const formattedDate = new Date(date).toLocaleDateString('zh-CN', {
    year: 'numeric',
    month: '2-digit',
    day: '2-digit'
}).replace(/\//g, '.');
---

<a href={link} target="_blank" rel="noopener noreferrer" class="media-card">
    <div class="cover-wrapper">
        <img src={cover} alt={title} loading="lazy" onerror="this.src='/placeholder.png'"/>
        {neodbRating && <span class="badge-rating">{neodbRating}</span>}
    </div>
    <div class="info">
        <h3 class="title" title={title}>{title}</h3>
    </div>
</a>

<style>
    .media-card {
        display: flex;
        flex-direction: column;
        text-decoration: none;
        color: inherit;
        border-radius: 0;
        overflow: visible;
        position: relative;
    }
    
    .media-card:hover .cover-wrapper {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
        transform: translateY(-2px);
    }
    
    .media-card:focus-visible {
        outline: 2px solid rgba(66, 153, 225, 0.6);
        outline-offset: 4px;
        border-radius: 2px;
    }

    .cover-wrapper {
        position: relative;
        width: 100%;
        aspect-ratio: 2 / 3;
        background: rgba(0, 0, 0, 0.05);
        border-radius: 6px;
        overflow: hidden;
        box-shadow: 0 2px 8px rgba(0, 0, 0, 0.08);
        transition: transform 0.2s ease, box-shadow 0.2s ease;
    }

    .cover-wrapper img {
        width: 100%;
        height: 100%;
        object-fit: cover;
        display: block;
    }

    .badge-rating {
        position: absolute;
        top: 4px;
        right: 4px;
        background: rgba(0, 0, 0, 0.65);
        color: #fff;
        font-size: 0.65rem;
        font-weight: 600;
        padding: 1px 5px;
        border-radius: 3px;
        backdrop-filter: blur(2px);
    }
    
    .info {
        margin-top: 6px;
        width: 100%;
    }

    .title {
        margin: 0;
        font-size: 0.75rem;
        font-weight: 400;
        color: var(--text-color);
        line-height: 1.3;
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        opacity: 0.9;
    }

    .media-card:hover .title {
        color: var(--heading-color);
        opacity: 1;
    }

    :global([data-theme='dark']) .cover-wrapper {
        background: rgba(255, 255, 255, 0.05);
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.25);
    }
</style>
